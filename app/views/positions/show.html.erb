<div class="d-flex">
  <h2><%= @position.name %></h2>
  <span class="flex-grow"></span>
  <%= link_to 'Edit Position', edit_position_path, class: 'btn btn-secondary' %>
</div>
<hr />

<div class="row">
  <div class="col-12 col-md-6">
    <table class="table table-hover border border-silver">
      <tbody>
        <tr>
          <td class="label-font">Skills:</td>
          <td><%= position_skills @position %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<br />

<div class="apllicants-list">

  <div class="d-flex mb-2">
    <h5>List of all applicants</h5>
    <span class="flex-grow"></span>
    <%= link_to 'Add Candidate', new_candidate_path, class: 'mr-2 btn btn-primary' %>
  </div>

  <div class="table-candidate-show">
    <table class="table table-hover">
      <thead>
        <tr>
          <th  scope="col">Name</th>
          <th  scope="col">Email</th>
          <th  scope="col">Matched</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <%  @position.candidates.each do |candidate| %>
          <tr>
            <td><%= "#{candidate.fname} #{candidate.lname}" %></td>
            <td><%= candidate.email %></td>
            <td><%= candidate.matched %></td>
            <td><%= link_to 'Show', candidate %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>