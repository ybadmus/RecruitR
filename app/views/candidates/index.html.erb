<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Candidates</h1>
<hr />

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Angelist</th>
      <th>Linkedin</th>
      <th>Matched</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.fname %></td>
        <td><%= candidate.lname %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.angelist %></td>
        <td><%= candidate.linkedin %></td>
        <td><%= candidate.matched %></td>
        <td><%= candidate.position.name %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candidate', new_candidate_path %>
