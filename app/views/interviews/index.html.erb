<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Interviews</h1>
<hr />

<table>
  <thead>
    <tr>
      <th>Interview date</th>
      <th>Candidate</th>
      <th>Recruiter</th>
      <th>Status</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
        <td><%= interview.interview_date %></td>
        <td><%= "#{interview.candidate.fname} #{interview.candidate.lname}" %></td>
        <td><%= interview.recruiter.name %></td>
        <td><%= interview.closed ? "Closed" : "Opened" %></td>
        <td><%= interview.score.nil? ? "N/a" : "#{interview.score.experience + interview.score.dynamism + interview.score.interest + interview.score.enthusiasm + interview.score.technical_skill}%" %></td>
        <td><%= link_to 'Show', interview %></td>
      </tr>
    <% end %>
  </tbody>
</table>
