<p id="notice"><%= notice %></p>

<h1>Interviews</h1>
<hr />

<table>
  <thead>
    <tr>
      <th>Interview date</th>
      <th>Candidate</th>
      <th>Recruiter</th>
      <th>Closed</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
        <td><%= interview.interview_date %></td>
        <td><%= "#{interview.candidate.lname} #{interview.candidate.lname}" %></td>
        <td><%= interview.recruiter.name %></td>
        <td><%= interview.closed %></td>
        <td><%= interview.score.nil? ? "N/a" : interview.score.experience  %></td>
        <td><%= link_to 'Show', interview %></td>
      </tr>
    <% end %>
  </tbody>
</table>
